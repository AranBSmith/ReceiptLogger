<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aransmith.app.receiptlogger.activities">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name="com.aransmith.app.receiptlogger.activities.LoginScreen"
            android:label="ReceiptLogger">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.aransmith.app.receiptlogger.activities.ActionSet"></activity>
        <activity android:name=".AutoLogExpense"></activity>
        <activity android:name=".LogExpenseOptions"></activity>


    </application>

</manifest>
